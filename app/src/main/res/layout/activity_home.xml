<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.viewUi.activity.HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:overScrollMode="never">

    </android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1">

    </View>
    <com.chaychan.library.BottomBarLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/bbl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            app:itemMarginTop="3dp"
            app:itemText="广告收益"
            app:itemTextSize="10sp"
            app:textColorNormal="@color/text_black"
            app:textColorSelected="@color/red" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            app:itemMarginTop="3dp"
            app:itemText="个人中心"
            app:itemTextSize="10sp"
            app:textColorNormal="@color/text_black"
            app:textColorSelected="@color/red" />


    </com.chaychan.library.BottomBarLayout>
</RelativeLayout>